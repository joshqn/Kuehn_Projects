<% provide(:title, "Login") %>

<% flash.each do |name, msg| %>
  <div class="alert alert-<%= name %>"><%= msg %></div>
<% end %>

<div class="row" style="margin-top: 16px">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, id: "passwordField", class: 'form-control' %>
      <%= link_to "Forgot your password?", new_password_reset_path, id: "forgotPass" %>

      <%= f.submit "Log in", class: "btn btn-primary submit-button" %>
    <% end %>

  </div>
</div>
